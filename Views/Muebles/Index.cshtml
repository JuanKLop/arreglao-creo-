@model IEnumerable<ValorConFloat.Models.Mueble>

@{
    ViewData["Title"] = "Muebles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="cuadrado">
    <p class="crear">
        <a asp-action="Create" class="btn btn-success btn-sm">
            <i class="fas fa-plus"></i> Crear nueva Habitacion
        </a>
    </p>
 <table id="myTable" class="display" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreMueble)
            </th>
            <th>
                @Html.DisplayName("Imagen")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadDisponible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayName("Acciones")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreMueble)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagenDataURL))
                    {
                        <img src="@item.ImagenDataURL" alt="Imagen de Habitación" style="width:100px;height:auto;" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidadDisponible)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td id="estado-@item.Idmueble">@Html.Raw(item.Estado ? "Activo" : "Inactivo")</td>
                <td>
                    <button onclick="cambiarEstado(@item.Idmueble, this)" class="btn btn-warning btn-sm" id="cambiar-estado-@item.Idmueble">
                        <i class="@(item.Estado ? "fa-solid fa-xmark" : "fa-solid fa-plug")"></i>
                    </button>
                    <a asp-action="Edit" asp-route-id="@item.Idmueble" class="btn btn-success btn-sm">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    <button onclick="loadDetails(@item.Idmueble)" class="btn btn-info btn-sm">
                            <i class="fa-solid fa-eye"></i>
                    </button>

                        <button type="button" class="btn btn-danger btn-sm" onclick="loadDelete(@item.Idmueble)">
                            <i class="fas fa-trash"></i>
                        </button>
                </td>
            </tr>
        }
    </tbody>
 </table>
</div>
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Detalles del mueble</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="detailsModalBody">
                <!-- Aquí se cargará el contenido dinámico -->
                <div class="text-center">Cargando...</div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Eliminar Mueble</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="deleteModalBody">
                <div class="text-center">Cargando...</div>
            </div>
        </div>
    </div>
</div>
<script>
    function loadDetails(id) {
        $.get('/Muebles/Details/' + id, function (data) {
            // Insertar el contenido en el modal
            $('#detailsModalBody').html(data);
            // Abrir el modal
            $('#detailsModal').modal('show');
        }).fail(function () {
            $('#detailsModalBody').html('<div class="text-danger">Error al cargar los detalles.</div>');
        });
    }
</script>
<script>
    function loadDelete(id) {
        $.get('/Muebles/Delete/' + id, function (data) {
            $('#deleteModalBody').html(data); // Inserta el contenido parcial
            $('#deleteModal').modal('show'); // Muestra el modal
        }).fail(function () {
            $('#deleteModalBody').html('<div class="text-danger">Error al cargar la información de los muebles.</div>');
        });
    }
</script>
<script>
    function submitDeleteForm(form) {
        event.preventDefault(); // Evitar el comportamiento predeterminado del formulario.

        const url = form.action;
        $.post(url, $(form).serialize(), function (response) {
            if (response.success) {
                // Cerrar el modal.
                $('#deleteModal').modal('hide');

                // Redirigir o actualizar la página según sea necesario.
                location.reload(); // Recargar la página para reflejar los cambios.
            } else {
                alert("Error al eliminar el mueble. Por favor, inténtalo de nuevo.");
            }
        }).fail(function () {
            alert("Ocurrió un error al procesar la solicitud.");
        });

        return false; // Prevenir el envío normal.
    }
</script>
<script>
    function cambiarEstado(id, button) {
        $.ajax({
            url: '@Url.Action("CambiarEstado")',
            type: 'POST',
            data: { id: id },
            success: function (response) {
                if (response.success) {
                    // Actualizar la columna de estado
                    const estadoText = response.estado ? "Activo" : "Inactivo";
                    $("#estado-" + id).text(estadoText);

                    // Actualizar el icono y texto del botón
                    const icon = $(button).find("i");
                    if (response.estado) {
                        icon.removeClass("fa-plug").addClass("fa-xmark");
                        $(button).text("").prepend(icon);
                    } else {
                        icon.removeClass("fa-xmark").addClass("fa-plug");
                        $(button).text("").prepend(icon);
                    }
                } else {
                    alert("Hubo un problema al cambiar el estado.");
                }
            },
            error: function () {
                alert("Error al procesar la solicitud.");
            }
        });
    }
</script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            "paging": true,          // Habilita paginación
            "searching": true,       // Habilita la barra de búsqueda
            "ordering": true,        // Habilita el ordenamiento de columnas
            "pageLength": 5,         // Muestra 5 registros por página
        });
    });
</script>
<style>

    /* Fondo del sitio */
    body {
        font-family: Arial, sans-serif;
        background-color: #bdefbb;
        color: #1a4a5a;
    }

    h1 {
        text-align: center
    }

    /* Estilos para el contenedor */
    .container {
        max-width: 1000px;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    /* Tabla */
    table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        background-color: #f8f9fa; /* Fondo claro para la tabla */
        padding: 15px;
    }

    .cuadrado {
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
    }
    /* Encabezado de la tabla */
    th {
        background-color: white; /* Verde oscuro para encabezado */
        color: #000000; /* Texto negro en el encabezado */
        font-weight: bold;
        padding: 12px;
        border: 1px solid #dcdcdc; /* Borde gris claro */
    }

    /* Celdas del cuerpo de la tabla */
    td {
        background-color: #ffffff; /* Fondo blanco */
        color: #1a4a5a; /* Color de texto verde oscuro */
        padding: 12px;
        text-align: center; /* Centrar el contenido de las celdas */
        border: 1px solid #e3e3e3; /* Bordes suaves para las celdas */
        transition: background-color 0.3s ease;
    }

    /* Estilo de filas alternas */
    tbody tr:nth-child(odd) td {
        background-color: #e9f7ec; /* Verde claro para filas alternas */
    }

    /* Hover para filas */
    tbody tr:hover td {
        background-color: #c8e6c9; /* Fondo verde suave en hover */
    }

    /* Botones de acción */
    .btn {
        font-weight: bold;
        color: #ffffff;
        border-radius: 5px;
        padding: 5px 10px;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

    .crear {
        text-align: right;
        padding: 10px;
    }

    .btn:hover {
        opacity: 0.85; /* Opacidad en hover */
    }

    /* Checkbox deslizante */
    .switch {
        position: relative;
        display: inline-block;
        width: 50px;
        height: 24px;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: 0.4s;
        border-radius: 24px;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 20px;
            width: 20px;
            left: 2px;
            bottom: 2px;
            background-color: white;
            transition: 0.4s;
            border-radius: 50%;
        }

    input:checked + .slider {
        background-color: #28a745; /* Verde para toggle activado */
    }

        input:checked + .slider:before {
            transform: translateX(26px);
        }
</style>